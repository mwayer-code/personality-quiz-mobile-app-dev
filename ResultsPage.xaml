<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="personality_quiz_1.ResultsPage" Background="LightGray"
             Title="ResultsPage">
    <Grid Padding="20"
            RowSpacing="15"
            RowDefinitions="Auto, Auto, Auto">
        
        <Label x:Name="ResultLabel" FontSize="24" TextColor="Black" Grid.Row="0" HorizontalOptions="Center"/>
        
        <Image x:Name="AnswerImage"
                Grid.Row="1"
                HeightRequest="250"
                HorizontalOptions="Center"
                Aspect="AspectFit"
       />
        
        <Button Grid.Row="2" Text="Retake Quiz" Clicked="OnRetakeClicked"
                BackgroundColor="AliceBlue" Background="DodgerBlue"
                CornerRadius="0" HeightRequest="60" TextColor="white" />
    </Grid>
</ContentPage>